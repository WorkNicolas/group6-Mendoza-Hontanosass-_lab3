{
    "ConnectionStrings": {
        "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=PodcastAppDB;Trusted_Connection=True;MultipleActiveResultSets=true"
    },
    "AWS": {
        "Profile": "default",
        "Region": "us-east-1",
        "S3": {
            "BucketName": "podcast-app-media-bucket",
            "AudioFolder": "audio",
            "ThumbnailFolder": "thumbnails"
        },
        "DynamoDB": {
            "TableName": "Comments",
            "ServiceURL": ""
        }
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning",
            "Microsoft.EntityFrameworkCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "Application": {
        "Name": "Podcast Management System",
        "Version": "1.0.0",
        "MaxFileUploadSizeMB": 500,
        "AllowedAudioExtensions": [ ".mp3", ".wav", ".m4a", ".aac" ],
        "AllowedImageExtensions": [ ".jpg", ".jpeg", ".png", ".gif" ],
        "DefaultThumbnail": "/images/default-podcast.png"
    }
}