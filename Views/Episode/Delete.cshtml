@model group6_Mendoza_Hontanosass__lab3.Models.Episode
@{
    ViewData["Title"] = "Delete Episode";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this episode?</h3>
<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Podcast</dt>
        <dd class="col-sm-10">@Model.Podcast?.Title</dd>
        
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        
        <dt class="col-sm-2">Release Date</dt>
        <dd class="col-sm-10">@Model.ReleaseDate.ToString("MMMM dd, yyyy")</dd>
        
        <dt class="col-sm-2">Duration</dt>
        <dd class="col-sm-10">@Model.Duration minutes</dd>
        
        <dt class="col-sm-2">Views</dt>
        <dd class="col-sm-10">@Model.Views</dd>
    </dl>
    
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="EpisodeID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Details" asp-route-id="@Model.EpisodeID" class="btn btn-secondary">Cancel</a>
    </form>
</div>
