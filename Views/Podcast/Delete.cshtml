@model group6_Mendoza_Hontanosass__lab3.Models.Podcast
@{
    ViewData["Title"] = "Delete Podcast";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this podcast?</h3>
<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        
        <dt class="col-sm-2">Created</dt>
        <dd class="col-sm-10">@Model.CreatedDate.ToString("MMMM dd, yyyy")</dd>
    </dl>
    
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="PodcastID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="MyPodcasts" class="btn btn-secondary">Cancel</a>
    </form>
</div>
